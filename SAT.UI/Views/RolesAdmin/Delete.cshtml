@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}

<h2 class="text-center my-3">@ViewBag.Title</h2>

<h3 class="text-center my-2">Are you sure you want to delete the role of <strong>@Html.DisplayFor(model => model.Name)</strong>? </h3>
<p class="text-center my-1">Deleting this Role will remove all users from this role. It will not delete the users.</p>
<div class="text-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default ourBtn my-2" />
            <br />
            @Html.ActionLink("Back to List", "Index", "RolesAdmin", routeValues: null, htmlAttributes: new { @class = "my-2" })
        </div>
    }
</div>
