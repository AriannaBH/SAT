@model SAT.UI.Models.RoleViewModel

@{
    ViewBag.Title = "Edit Roles";
}

<h2 class="text-center my-3">@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2 offset-1" })
            <div class="col-md-10 offset-1">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="offset-1 col-md-10 text-center">
                <input type="submit" value="Save" class="btn btn-default ourBtn mb-3" />
                <br />
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
