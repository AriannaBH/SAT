@model SAT.DATA.EF.Course

@{
    ViewBag.Title = "Delete Course";
}

<h2 class="text-center my-3">@ViewBag.Title</h2>

<h3 class="text-center my-2">
    Are you sure you want to delete this @if (Model.IsActive)
    {<em>active</em> }
    else
    { <em>inactive</em>} course: <strong>@Model.CourseName</strong>
</h3>
<div class="row text-center">
    <div class="col-md-4 offset-2">
        <dl class="dl-horizontal">
            <dt class="mt-2">
                @Html.DisplayNameFor(model => model.CourseDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseDescription)
            </dd>

            <dt class="mt-2">
                @Html.DisplayNameFor(model => model.CreditHours)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreditHours)
            </dd>
        </dl>
    </div>
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt class="mt-2">
                @Html.DisplayNameFor(model => model.Curriculum)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Curriculum)
            </dd>

            <dt class="mt-2">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Notes)
            </dd>
        </dl>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color text-center mb-3">
        <input type="submit" value="Delete" class="btn btn-default ourBtn mb-3" />
        <br />
        @Html.ActionLink("Back to List", "Index")
    </div>
}
