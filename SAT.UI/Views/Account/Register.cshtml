@model SAT.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 class="text-center my-3">@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal ourRegister", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="text-center">Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label offset-md-1" })
        <div class="col-md-10 offset-md-1">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label offset-md-1" })
        <div class="col-md-10 offset-md-1">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label offset-md-1" })
        <div class="col-md-10 offset-md-1">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 offset-md-1">
            <input type="submit" class="btn btn-default ourBtn" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}