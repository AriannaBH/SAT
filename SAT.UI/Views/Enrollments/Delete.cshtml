@model SAT.DATA.EF.Enrollment

@{
    ViewBag.Title = "Delete Enrollment";
}

<h2 class="text-center my-3">@ViewBag.Title</h2>

<h3 class="text-center my-2">Are you sure you want to delete this enrollment?</h3>
<div class="row text-center">
    <div class="col-md-8 offset-2">
        <dl class="dl-horizontal">
            <dt class="mt-2">
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EnrollmentDate)
            </dd>

            <dt class="mt-2">
                @Html.DisplayNameFor(model => model.ScheduledClass.InstructorName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ScheduledClass.InstructorName)
            </dd>

            <dt class="mt-2">
                Student Name
            </dt>

            <dd>
                @Model.Student.FullName()
            </dd>

        </dl>
    </div>
</div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color text-center mb-3">
                <input type="submit" value="Delete" class="btn btn-default ourBtn mb-3" />
                <br />
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
