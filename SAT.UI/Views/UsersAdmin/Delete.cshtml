@model SAT.UI.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<h2 class="text-center my-3">@ViewBag.Title</h2>

<h3 class="text-center my-2">Are you sure you want to delete <strong>@Html.DisplayFor(model => model.UserName)</strong>?</h3>
<div class="text-center">

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default ourBtn my-2" />
            <br />
            @Html.ActionLink("Back to List", "Index", "UsersAdmin", routeValues: null, htmlAttributes: new { @class = "my-2" })
        </div>
    }
</div>
