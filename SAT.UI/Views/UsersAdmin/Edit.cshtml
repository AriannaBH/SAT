@model SAT.UI.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h2 class="text-center my-3">@ViewBag.Title</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2 offset-1" })
            <div class="col-md-10 offset-1">
               @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
               @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 offset-md-1">
                @Html.Label("Roles:", new { @class = "control-label pr-3" })
                @foreach (var item in Model.RolesList)
                {
                    <input type="checkbox" name="SelectedRoles" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label" })
                }
            </div>
        </div>

        <div class="form-group">
            <div class="offset-1 col-md-10 text-center">
                <input type="submit" value="Save" class="btn btn-default ourBtn mb-3" />
                <br />
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
