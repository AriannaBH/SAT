@model SAT.DATA.EF.Student

@{
    ViewBag.Title = "Student Details";
}

<div class="text-center">
    <h2 class="my-3 ourH5">@ViewBag.Title</h2>
    <h1> @Model.FullName()</h1>
    <h3>
        <span class="ourH5">Major:</span>
        @if (Model.Major != null)
        {
            @Html.DisplayFor(model => model.Major)
        }
        else { <span>Undeclared</span> }
    </h3>
    
    <hr />
    <div class="row">
        <div class="col-md-4 offset-md-2">
            <h5 class="mb-0 ourH5">Student Status</h5>
            <p class="mb-3">
                @Html.DisplayFor(model => model.StudentStatus.SSName)
            </p>
            <h5 class="mb-0 ourH5">Address</h5>
            <p class="mb-3">
                @Html.DisplayFor(model => model.Address)
                <br />
                @Html.DisplayFor(model => model.City),
                @Html.DisplayFor(model => model.State),
                @Html.DisplayFor(model => model.ZipCode)
            </p>
            <h5 class="mb-0 ourH5">Phone</h5>
            <p class="mb-3">
                @Html.DisplayFor(model => model.Phone)
            </p>
            <h5 class="mb-0 ourH5">Email</h5>
            <p class="mb-3">
                @Html.DisplayFor(model => model.Email)
            </p>
        </div>

        <div class="col-md-4">
            <img src="~/Content/StudentImages/@Model.PhotoUrl" alt="@Model.FullName()" class="img-responsive img-thumbnail ourImage" />
        </div>
    </div>
    <p class="text-center mt-5">
        @Html.ActionLink("Edit", "Edit", new { id = Model.StudentId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
